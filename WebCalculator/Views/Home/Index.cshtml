@{
    ViewBag.Title = "Calculator";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="@Url.Content("~/Content/Calculator.css")" rel="stylesheet" type="text/css" />
    <title>Caculator</title>
    @section scripts
   {
        <script src="@Url.Content("~/Scripts/WebCalculator.js")"></script>
    }
</head>
<body>
    <form id="CalculatorForm" method="post">
        <div id="calculator">
            <!-- Screen and clear key -->
            <div class="top">
                
                <input class="screen" type="text" name="expression" value="@ViewBag.Expression" />
                 
            </div>

            <div class="keys">
                <!-- operators and other keys -->
                <span class="operator">(</span>
                <span class="operator">)</span>
                <span class="operator">SQRT</span>
                <span class="operator">^</span>
                <span class="clear">C</span>
                <span>7</span>
                <span>8</span>
                <span>9</span>
                <span class="operator">+</span>
                <span class="operator">%</span>
                <span>4</span>
                <span>5</span>
                <span>6</span>
                <span class="operator">-</span>
                <span class="operator">ABS</span>
                <span>1</span>
                <span>2</span>
                <span>3</span>
                <span class="operator">/</span>
                <span class="operator">FLOOR</span>
                <span>0</span>
                <span>.</span>
                <input id="submit" type="submit" value="=" class="eval">
                <span class="operator">*</span>
                
                <span class="operator">GAUSS</span>
            </div>
        </div>
    </form>
</body>
</html>
